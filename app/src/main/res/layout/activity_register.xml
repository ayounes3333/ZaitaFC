<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaita.aliyounes.zaitafc.activities.RegisterActivity">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_signUpLabel"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/imageView_logo"
        android:text="@string/sign_up"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_fullName"
        android:layout_below="@id/textView_signUpLabel"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_nameLogo"
            android:layout_weight="1"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person_outline_black_18dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInput_fullName"
            android:hint="@string/full_name"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/underline_fullName"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/linearLayout_fullName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_userName"
        android:layout_below="@id/underline_fullName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_userLogo"
            android:layout_weight="1"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person_outline_black_18dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInput_userName"
            android:hint="@string/username_email"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/underline_userName"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/linearLayout_userName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_birthday"
        android:layout_below="@id/underline_userName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_birthdayLogo"
            android:layout_weight="1"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person_outline_black_18dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInput_birthday"
            android:hint="@string/birthday"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/underline_birthday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/linearLayout_birthday"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_password"
        android:layout_below="@id/underline_birthday"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_passLogo"
            android:layout_weight="1"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_lock_outline_black_18dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInput_password"
            android:hint="@string/password"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/underline_password"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/linearLayout_password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_confirmPassword"
        android:layout_below="@id/underline_password"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_rePassLogo"
            android:layout_weight="1"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_lock_outline_black_18dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInput_confirmPassword"
            android:hint="@string/confirm_password"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/underline_confirmPassword"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/linearLayout_confirmPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_join"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="@string/join"
        android:background="@drawable/bordered_primary_button"/>
</RelativeLayout>
